<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MenuPrincipalAdministrativoActivity">

    <!-- Barra lateral azul -->
    <View
        android:id="@+id/barra_lateral"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:background="#0099FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Principal"
        android:textSize="24sp"
        android:textColor="#555555"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- Botón: Listado de pacientes -->
    <Button
        android:id="@+id/btn_listado_paciente"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Listado de pacientes"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintStart_toEndOf="@id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón: Registro de paciente -->
    <Button
        android:id="@+id/btn_registro_paciente"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Registro de paciente"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_listado_paciente"
        app:layout_constraintStart_toEndOf="@id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón: Registrar médicos -->
    <Button
        android:id="@+id/btn_registrar_medicos"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Registrar médicos"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_registro_paciente"
        app:layout_constraintStart_toEndOf="@id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Botón: Cerrar sesión -->
    <Button
        android:id="@+id/btn_cerrar_sesion"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Cerrar sesión"
        android:background="@drawable/button_rounded"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btn_registrar_medicos"
        app:layout_constraintStart_toEndOf="@id/barra_lateral"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
