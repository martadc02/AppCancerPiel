<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre del Médico -->
        <EditText
            android:id="@+id/editNombreMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Médico"
            android:inputType="textPersonName" />

        <!-- Apellidos del Médico -->
        <EditText
            android:id="@+id/editApellidosMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos del Médico"
            android:inputType="textPersonName" />

        <!-- Correo Electrónico -->
        <EditText
            android:id="@+id/editEmailMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress" />

        <!-- Teléfono del Médico -->
        <EditText
            android:id="@+id/editTelefonoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone" />

        <!-- Contraseña -->
        <EditText
            android:id="@+id/editPasswordMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword" />

        <!-- Texto para el grupo de opciones -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Médico"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp" />

        <!-- Grupo de opciones para tipo de médico -->
        <RadioGroup
            android:id="@+id/radioGroupTipoMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioMedicoFamilia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médico de Familia" />

            <RadioButton
                android:id="@+id/radioDermatologo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dermatólogo" />
        </RadioGroup>

        <!-- Botón para registrar médico -->
        <Button
            android:id="@+id/btnRegistrarMedico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Registrar Médico"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
