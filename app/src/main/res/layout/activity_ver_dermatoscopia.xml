<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Datos de la persona -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvApellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellidos: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvDni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DNI: "
        android:textSize="18sp" />

    <!-- Datos de la dermatoscopia -->
    <TextView
        android:id="@+id/tvCarcinomaCelEscamosa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carcinoma Celular Escamoso: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCarcinomaNoPigmentado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carcinoma No Pigmentado: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvCarcinomaPigmentado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carcinoma Pigmentado: "
        android:textSize="16sp" />
</LinearLayout>
